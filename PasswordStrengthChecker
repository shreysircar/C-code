#include <iostream>
#include <cstring>
using namespace std;
class PasswordChecker{
  public:
 string password;
      PasswordChecker(){
    password ="null";
  }
void length(string pw){
        password=pw;
    int length;
    length=strlen(password.c_str());
    cout<<"Password length:"<<length<<endl;
    if(length<8){
        throw"Password must be atleast 8 character long...";
    }
}
void content(){
    int C,c,d;
    c=0;
    C=0;
    d=0;
    for(int i=0;i<30;i++){
       if(password[i]>=97 && password[i]<=122){
        c++;
       }
            else if(password[i]>=65 && password[i]<=90){
        C++;
       } 
            else if(password[i]>=48 && password[i]<=57){
        d++;
       }
    }

if(c==0){
    throw"Lowercase letter is missing";
}
if(C==0){
    throw"Uppercase letter is missing";
}
if(d==0){
    throw"Integer digit is missing";
}
}

};
//class WeakPasswordException{};
int main()
{
    try{
    string pass;
cout<<"Enter your pw:"<<endl;
getline(cin,pass);
PasswordChecker code;
code.length(pass);
code.content();
}
catch(const char *str){
    cout<<"error:"<<str;
}
catch(...){
    cout<<"An unknown error occurred...";
}
return 0;
}
